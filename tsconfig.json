{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es6", "es2017", "es2018", "es2019", "es2020", "esnext.asynciterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "removeComments": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "baseUrl": "./src/types",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "exclude": [],
  "include": [
    "src/**/*.ts"
  ]
}
